{
  "module.load": {
    "parallel": false,
    "desc": "load a module",
    "options": {
      "params": {
        "required": "file"
      }
    }
  },
  "module.unload": {
    "parallel": false,
    "desc": "unload a module",
    "options": {
      "params": {
        "required": "name"
      }
    }
  },
  "module.reload": {
    "parallel": false,
    "desc": "reload a module",
    "options": {
      "params": {
        "required": "file"
      }
    }
  },
  "module.watch": {
    "parallel": true,
    "desc": "start watching for module auto-reload",
    "options": {
      "params": {
        "optional": "file"
      }
    }
  },
  "module.unwatch": {
    "parallel": true,
    "desc": "stop watching for module auto-reload",
    "options": {
      "params": {
        "optional": "file"
      }
    }
  }
}
